	public static String Repeticion(String respuesta, Scanner sc) {
		System.out.println("Desea continuar operando? Si o No");
		respuesta = sc.next();
		return respuesta;
	}
	public static void Fisicos() {
		System.out.println("Fuerza");
		System.out.println("Agilidad");
		System.out.println("Velocidad");
		System.out.println("Reflejos");
		System.out.println("Astucia");
	}
	public static void Magicos() {
		System.out.println("Luminosidad");
		System.out.println("Oscuridad");
		System.out.println("Espiritual");
		System.out.println("Afinidad acuatica");
		System.out.println("Magia ancestral");
	}
