						System.out.println("Magia secundaria: " + l1.getFisico2());
						System.out.println("Titulo: " + l1.getEficacia());
						arrayPersonaje.add(l1);
					}
					
				break;
				case 2:
					
					
				break;
				case 3:
					
				break;
